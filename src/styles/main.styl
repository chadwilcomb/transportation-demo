@import 'yeticss'
@import './_colors.styl'
@import './sidebar.styl'
@import './leaflet.styl'

piq-purple = #6656a4
piq-purple-dark = darken(piq-purple, 15)
piq-purple-light = lighten(piq-purple, 45)
body-black = #4d5659



body
    padding: 0
    margin: 0
a
    color: piq-purple

a:hover
    color: piq-purple-dark

.button
    background-color: piq-purple
.button:hover
    background-color: piq-purple-dark

html, body, .nav-helper, .body, .demo-container, .map
    height: 100%

.body
    height: calc(100% - 62px)

h1, h2, h3, h4, h5, h6, strong
    color: body-black

.pull-left
  float:left
  display:block

.pull-right
  float:right
  display:block

.top-nav
    margin-bottom: 0
    border: none

.top-nav, .top-nav *, .top-nav-light, .top-nav-light li
    background-color: piq-purple

.top-nav a
    color: #E5E5E5

.top-nav a:hover, .top-nav a.current-item
    color: #FFF

.top-nav ul
    width: 100%
    border: none
    padding-top: 15px
.top-nav ul li
    padding: 0
.top-nav ul a
    font-size: 16px
.top-nav ul a.piq-link
    color: #969696

.piq-link
    background-image: url(../images/piq-logo-inv.png)
    background-size: 79px 25px
    height: 25px
    width: 79px
    margin-left: 10px
    margin-right: 10px
.piq-link-lg
    background-image: url(../images/piq-logo.png)
    background-size: 146px 46px
    height: 46px
    width: 146px
    display: block


.map
    float: left
    position: relative
    width: 70%
    height: 100%
    overflow: hidden


header
  padding-top: 50px

.label
  height: 40px

  .label-color
    width: 24px
    height: 24px
    border: 1px solid grey
    border-radius: 20px
    display: inline-block

  > span
    margin-left: 10px
    margin-right: 10px


.modal
    position: relative
    border: 2px solid #565656
    color: #565656
    width: 25%
    padding: 20px
    p
        margin-bottom: 0
        font-size: 14px

.hidden
    display: none
    visibility: hidden

.noselect
    user-select: none
